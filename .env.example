# Bot Tokens
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Telegram Configuration
TELEGRAM_GROUP_ID=your_telegram_group_id_here

# Discord Configuration
DISCORD_GUILD_ID=your_discord_guild_id_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Database Configuration
DATABASE_PATH=./gamebot.db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging
LOG_LEVEL=info
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# Game Configuration
DEFAULT_LANGUAGE=en
MAX_GAMES_PER_PLAYER=5
GAME_TIMEOUT_MINUTES=30
TOURNAMENT_ENABLED=true

# API Configuration (optional)
API_PORT=3000
API_ENABLED=false

# Performance
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_GAMES=100

# Features
DAILY_CHALLENGES_ENABLED=true
ACHIEVEMENTS_ENABLED=true
LEADERBOARD_ENABLED=true
AI_OPPONENTS_ENABLED=true

# Cross-Platform Relay Configuration
RELAY_ENABLED=true
TELEGRAM_GAME_CHANNEL=your_telegram_game_channel_id
DISCORD_GAME_CHANNEL=your_discord_game_channel_id
RELAY_SHOW_PLATFORM=true
RELAY_SHOW_USERNAME=true

# Game Environment (production, development, all)
NODE_ENV=production