{
  "name": "cross-platform-gamebot",
  "version": "1.0.0",
  "description": "A unified gaming bot that works across Telegram and Discord platforms",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "predev": "node scripts/ensure-services.js",
    "dev": "tsx watch src/index.ts",
    "dev:full": "npm run predev && npm run dev",
    "gamebot": "NODE_ENV=production node dist/index.js",
    "gamebot:dev": "NODE_ENV=development tsx watch src/index.ts",
    "gamebot:all": "NODE_ENV=all tsx watch src/index.ts",
    "promote-game": "tsx scripts/promote-game.ts",
    "build": "tsc && npm run copy-game-data",
    "copy-game-data": "mkdir -p dist/games/word-games/data && cp -r src/games/word-games/data/*.json dist/games/word-games/data/ && cp -r src/games/word-games/data/*.txt dist/games/word-games/data/",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "redis:start": "./start-redis.sh",
    "redis:stop": "./stop-redis.sh",
    "test:watch": "jest --watch",
    "db:init": "tsx scripts/setup.ts",
    "db:migrate": "tsx scripts/run-migrations.ts",
    "get-telegram-id": "node scripts/get-telegram-id.js",
    "get-discord-id": "node scripts/get-discord-id.js",
    "get-invite": "node scripts/get-bot-invite.js"
  },
  "keywords": [
    "telegram",
    "discord",
    "bot",
    "games",
    "multiplayer",
    "cross-platform"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.7.8",
    "dayjs": "^1.11.10",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "input": "^1.0.1",
    "ioredis": "^5.7.0",
    "lodash": "^4.17.21",
    "node-schedule": "^2.1.1",
    "node-telegram-bot-api": "^0.66.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "telegram": "^2.26.22",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.202",
    "@types/node": "^24.1.0",
    "@types/node-schedule": "^2.1.6",
    "@types/node-telegram-bot-api": "^0.64.9",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
